{
      "latex-workshop.latex.recipe.default": "first",
      "latex-workshop.latex.recipes": [
  
        {
        "name": "lualatex",
        "tools": [
            // "make",
            "lualatexmk"
        ]
        }
      ],
      "latex-workshop.latex.tools": [
        {
          "name": "lualatexmk",
          "command": "latexmk",
          "args": [
            "-synctex=1",
            "-interaction=nonstopmode",
            "-file-line-error",
            "-lualatex",
            "-outdir=%OUTDIR%",
            "%DOC%",
            "-shell-escape"
          ],
          "env": {}
        }
      ],
      "latex-workshop.latex.outDir": "output/",
  }